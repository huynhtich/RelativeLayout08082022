<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textviewRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F44336"
        android:textColor="#fff"
        android:text="Red" />

    <TextView
        android:id="@+id/textviewGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewRed"
        android:background="#4CAF50"
        android:textColor="#fff"
        android:text="Green" />

    <TextView
        android:id="@+id/textviewBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewGreen"
        android:background="#3F51B5"
        android:textColor="#fff"
        android:text="Blue" />

    <TextView
        android:id="@+id/textviewOrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewBlue"
        android:background="#FF5722"
        android:textColor="#fff"
        android:text="Orange" />

    <TextView
        android:id="@+id/textviewGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewOrange"
        android:background="#A3A3A3"
        android:textColor="#fff"
        android:text="Gray" />

    <TextView
        android:id="@+id/textviewPink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewGray"
        android:background="#9C27B0"
        android:textColor="#fff"
        android:text="Pink" />

</RelativeLayout>